<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/begron2"
    android:orientation="vertical"
    tools:context="metis.winwin.TermCondition">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:src="@drawable/ic_logo2" />

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/border_term"
        android:padding="10dp">

        <TextView
            android:id="@+id/textdengan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/bpblack"
            android:textAlignment="center"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel"
        android:layout_margin="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btSetuju"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:background="@drawable/rounded_view_hijau"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/bpWhite" />

        <Button
            android:id="@+id/btTidak"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ripple_tidak"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/bpWhite" />
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_ojk_p" />
</RelativeLayout>
